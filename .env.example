# ============================================================================
# AI Tourist â€” Example environment configuration for local Minikube deployment
# Copy this file to .env and adjust the values before running the scripts.
# ============================================================================

# --- Core database credentials (required) ---
DB_HOST=postgresql
DB_PORT=5432
DB_USER=aitourist
DB_PASSWORD=change_me_db_password
DB_NAME=aitourist

# --- Service secrets (required) ---
JWT_SECRET_KEY=change_me_jwt_secret
ENCRYPTION_KEY=change_me_encryption_key
TWOGIS_API_KEY=change_me_twogis_key

# --- Optional LLM keys (at least one can be provided) ---
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# --- LLM configuration ---
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# --- Feature toggles and resources ---
POSTGRESQL_ENABLED=true
POSTGRESQL_PERSISTENCE_ENABLED=true
POSTGRESQL_STORAGE_SIZE=1Gi
REDIS_ENABLED=true
REDIS_PERSISTENCE_ENABLED=true
REDIS_STORAGE_SIZE=1Gi
INGRESS_ENABLED=true

FRONTEND_REPLICAS=2
API_GATEWAY_REPLICAS=2
EMBEDDING_REPLICAS=2
EMBEDDING_BATCH_SIZE=32
RANKING_REPLICAS=2
ROUTE_PLANNER_REPLICAS=2
LLM_SERVICE_REPLICAS=1
GEOCODING_REPLICAS=1
POI_REPLICAS=1

# --- Image tags (override to pin custom builds) ---
FRONTEND_IMAGE_TAG=latest
API_GATEWAY_IMAGE_TAG=latest
EMBEDDING_IMAGE_TAG=latest
RANKING_IMAGE_TAG=latest
ROUTE_PLANNER_IMAGE_TAG=latest
LLM_SERVICE_IMAGE_TAG=latest
GEOCODING_IMAGE_TAG=latest
POI_IMAGE_TAG=latest
POSTGRESQL_IMAGE_TAG=16-alpine
REDIS_IMAGE_TAG=7-alpine

# --- Resource overrides (leave defaults for hackathon demo) ---
FRONTEND_MEMORY_REQUEST=128Mi
FRONTEND_CPU_REQUEST=100m
FRONTEND_MEMORY_LIMIT=256Mi
FRONTEND_CPU_LIMIT=200m

API_GATEWAY_MEMORY_REQUEST=256Mi
API_GATEWAY_CPU_REQUEST=200m
API_GATEWAY_MEMORY_LIMIT=512Mi
API_GATEWAY_CPU_LIMIT=500m

EMBEDDING_MEMORY_REQUEST=512Mi
EMBEDDING_CPU_REQUEST=500m
EMBEDDING_MEMORY_LIMIT=1Gi
EMBEDDING_CPU_LIMIT=1000m

RANKING_MEMORY_REQUEST=256Mi
RANKING_CPU_REQUEST=200m
RANKING_MEMORY_LIMIT=512Mi
RANKING_CPU_LIMIT=500m

ROUTE_PLANNER_MEMORY_REQUEST=256Mi
ROUTE_PLANNER_CPU_REQUEST=200m
ROUTE_PLANNER_MEMORY_LIMIT=512Mi
ROUTE_PLANNER_CPU_LIMIT=500m

LLM_SERVICE_MEMORY_REQUEST=256Mi
LLM_SERVICE_CPU_REQUEST=200m
LLM_SERVICE_MEMORY_LIMIT=512Mi
LLM_SERVICE_CPU_LIMIT=500m

GEOCODING_MEMORY_REQUEST=128Mi
GEOCODING_CPU_REQUEST=100m
GEOCODING_MEMORY_LIMIT=256Mi
GEOCODING_CPU_LIMIT=200m

POI_MEMORY_REQUEST=256Mi
POI_CPU_REQUEST=200m
POI_MEMORY_LIMIT=512Mi
POI_CPU_LIMIT=500m
